# AI Binary Trading Bot Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# API KEYS (REQUIRED)
# ===========================================

# Twelve Data API Key (for forex data)
# Get your free API key at: https://twelvedata.com/
TWELVE_DATA_API_KEY=your_twelve_data_api_key_here

# AI Provider API Keys (at least one required)
# Groq API Key - Get at: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Together AI API Key - Get at: https://api.together.xyz/
TOGETHER_API_KEY=your_together_api_key_here

# ===========================================
# QXBROKER CREDENTIALS (REQUIRED FOR LIVE TRADING)
# ===========================================

# Your QXBroker login credentials
QXBROKER_EMAIL=your_email@example.com
QXBROKER_PASSWORD=your_password_here

# ===========================================
# TRADING CONFIGURATION
# ===========================================

# Currency pair to trade (default: USD/INR)
# Supported: USD/BRL, USD/INR, USD/PKR, USD/MXN, USD/ARS, USD/EGP, USD/BDT, USD/DZD
CURRENCY_PAIR=USD/INR

# Trade amount in USD (default: 10)
TRADE_AMOUNT=10

# Minimum AI confidence required to execute trade (0-100, default: 75)
MIN_CONFIDENCE=75

# Paper trading mode (true/false, default: true for safety)
PAPER_TRADING=true

# AI provider to use ('groq' or 'together', default: groq)
AI_PROVIDER=groq

# ===========================================
# SELENIUM CONFIGURATION
# ===========================================

# Run browser in headless mode (true/false, default: true)
SELENIUM_HEADLESS=true

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log level (debug, info, warn, error, default: info)
LOG_LEVEL=info

# ===========================================
# ADVANCED SETTINGS (OPTIONAL)
# ===========================================

# Maximum trades per day (default: 50)
MAX_DAILY_TRADES=50

# Maximum consecutive losses before stopping (default: 3)
MAX_CONSECUTIVE_LOSSES=3
